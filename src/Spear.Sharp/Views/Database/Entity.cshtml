@using Acb.Core.Extensions
@using Acb.Core.Helper
@using Spear.Sharp.Contracts.Enums
@using Spear.Sharp.Domain
@model Spear.Sharp.Contracts.Dtos.Database.TableDto
@{
    var provider = ViewData.GetValue<ProviderType>("Provider");
    var primary = Model.PrimaryColumn;
    const LanguageType language = LanguageType.CSharp;
}
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@Model.Name<small style="margin-left: 15px">@Model.Description</small></h4>
        </div>
        <div class="modal-body">
            <div class="row" style="margin: 0 0 15px 0">
                <div class="col-sm-offset-6 col-sm-3">
                    <select class="form-control">
                        <option>C#</option>
                    </select>
                </div>
                <div class="col-sm-3 b-naming">
                    <select class="form-control">
                        <option value="0">None</option>
                        <option value="1" selected="selected">Naming</option>
                        <option value="2">Table</option>

                    </select>
                </div>
            </div>
            <div class="code d-none hide">
                <button class="btn btn-primary b-copy">Copy</button>
                <pre><code class="cs">@Model.EntityCode(provider, language, NamingType.None)</code></pre>
            </div>
            <div class="code d-naming">
                <button class="btn btn-primary b-copy">Copy</button>
                <pre><code class="cs">@Model.EntityCode(provider)</code></pre>
            </div>
            <div class="code d-table hide">
                <button class="btn btn-primary b-copy">Copy</button>
                <pre><code class="cs">@Model.EntityCode(provider, language, NamingType.Table)</code></pre>
            </div>
        </div>
    </div>
</div>